# Server Configuration
PORT=3000
NODE_ENV=development

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database (automatically set by Railway when you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Email Configuration (for order notifications to pegacysg@gmail.com)
# Option 1: Use Gmail with App Password
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-gmail@gmail.com
# EMAIL_PASS=your-app-password

# Option 2: Use SendGrid (recommended for production)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# Option 3: Use Resend
# EMAIL_HOST=smtp.resend.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=resend
# EMAIL_PASS=your-resend-api-key
